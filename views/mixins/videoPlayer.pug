mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, type="video/mp4")
        .videoPlayer__controls 
            .videoPlayer__column 
                span
                    i.fas.fa-volumne-up
                span 
                    |00:00 / 10:00
            .videoPlayer__column 
                span#jsPlayButton 
                    i.fas.fa-play
            .videoPlayer__column 
                span 
                    i.fas.fa-expand 
