mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, type="video/mp4")
        .videoPlayer__controls 
            .videoPlayer__column 
                span#jsVolumBtn 
                    i.fas.fa-volume-up
                span 
                    span#currentTime 00:00:00 
                    |/ 
                    span#totalTime 00:00:00
            .videoPlayer__column 
                span#jsPlayButton 
                    i.fas.fa-play
            .videoPlayer__column 
                span#jsFullScreen
                    i.fas.fa-expand 
