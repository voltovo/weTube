doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}
            nav
                ul
                    if fakeUser.loggedIn
                        li
                            a(herf="/logout ") Log out
                    else
                        li
                            a(herf="/login") Login
            h1=pageTitle
        main
            block content
    include partials/footer.pug
